{
  "extends": ["config:recommended"],
  "recreateClosed": true,
  "enabledManagers": ["flux", "kubernetes", "helm-values"],
  "flux": {
    "postUpdateOptions": ["fluxReconcile"]
  },
  "schedule": ["at 12:00pm every weekday"],
  "timezone": "Africa/Lagos",
  "packageRules": [
    {
      "matchManagers": ["flux"],
      "postUpdateOptions": ["fluxReconcile"],
      "additionalBranchPrefix": "flux-"
    },
    {
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "hostRules": [
    {
      "matchHost": "prometheus-community.github.io",
      "hostType": "helm"
    },
    {
      "matchHost": "charts.bitnami.com",
      "hostType": "helm"
    },
    {
      "matchHost": "helm.traefik.io",
      "hostType": "helm"
    },
    {
      "matchHost": "grafana.github.io",
      "hostType": "helm"
    },
    {
      "matchHost": "index.docker.io",
      "hostType": "docker"
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "onboardingConfig": {
    "extends": ["config:recommended"],
    "onboarding": true
  },
  "notifications": [
    {
      "type": "email",
      "enabled": true,
      "addresses": ["sirpaulx@gmail.com"],
      "notifyOn": ["pr", "error", "warning"]
    }
  ]
}
